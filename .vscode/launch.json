{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug fdf (gdb)",
      "type": "cppdbg",
      "request": "launch",
      "preLaunchTask": "build fdf",          // ‚Üê runs the make-task first
      "program": "${workspaceFolder}/fdf",   // adapt if you build elsewhere
      "cwd": "${workspaceFolder}",
      "args": ["maps/plat.fdf"],                            // put CLI args here if needed
      "stopAtEntry": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",      // or "gdb.exe" on Windows/MinGW
      "setupCommands": [
        { "description": "Enable pretty-printing", "text": "-enable-pretty-printing" }
      ]
    }
  ]
}